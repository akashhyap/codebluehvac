---
interface Props {
  heading?: string;
  subheading?: string;
  description?: string;
}
const { heading = "HVAC Emergency?\nCall Code Blue", subheading, description = "Whether it's a broken AC in the middle of a Las Vegas summer or a heating system that won't start, our licensed technicians are ready to help 24/7. Fast response, honest pricing, guaranteed satisfaction. Seniors, veterans, and first responders get 15% off." } = Astro.props;
---

<section class="py-20 lg:py-28 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="relative bg-warm big-top overflow-hidden p-8 sm:p-12 lg:p-16">
      <div class="absolute top-6 right-6 w-20 h-20 bg-accent rounded-card opacity-90 flex items-center justify-center">
        <svg class="w-10 h-10 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 3v18M5.63 5.63l12.74 12.74M3 12h18M5.63 18.37l12.74-12.74"/><circle cx="12" cy="12" r="3"/></svg>
      </div>
      <div class="relative z-10 max-w-2xl">
        <div class="w-14 h-14 mb-6">
          <svg class="w-full h-full text-dark/80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z"/><path d="M9 22V12h6v10"/></svg>
        </div>
        <h2 class="font-heading text-4xl sm:text-5xl lg:text-6xl uppercase tracking-wide text-dark leading-[0.9] mb-4 whitespace-pre-line">{heading}</h2>
        <p class="text-dark/60 leading-relaxed mb-8 max-w-lg">{description}</p>
        <div class="flex flex-wrap gap-4">
          <a href="tel:+17028271184" class="inline-flex items-center gap-3 bg-accent text-white px-7 py-4 rounded-card font-accent font-semibold uppercase tracking-wide text-sm hover:bg-accent-dark transition-all duration-200 hover:shadow-lg hover:shadow-accent/20">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72c.127.96.361 1.903.7 2.81a2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0122 16.92z"/></svg>
            (702) 827-1184
          </a>
          <a href="/contact" class="inline-flex items-center gap-2 bg-dark text-white px-7 py-4 rounded-card font-accent font-semibold uppercase tracking-wide text-sm hover:bg-dark/90 transition-all duration-200">
            Schedule Service
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
